{
  "name": "nxzr_gui",
  "version": "0.0.0",
  "description": "NXZR project: Host GUI application",
  "author": "Plusb Preco <plusb21@gmail.com>",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "yarn run typecheck && yarn run lint",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "typecheck": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "UNLICENSED",
  "homepage": "https://github.com/preco21/nxzr#readme",
  "repository": "preco21/nxzr",
  "bugs": "https://github.com/preco21/nxzr/issues",
  "dependencies": {
    "@tauri-apps/api": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@preco21/eslint-config": "^2.2.2",
    "@preco21/tsconfig": "^5.3.0",
    "@tauri-apps/cli": "^1.3.1",
    "@types/node": "^18.7.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "5.0.4",
    "vite": "^4.2.1"
  },
  "packageManager": "yarn@3.6.0",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@preco21/eslint-config"
    ],
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "env": {
          "browser": true,
          "node": true
        },
        "extends": [
          "@preco21/eslint-config/typescript-react"
        ],
        "settings": {
          "react": {
            "version": "detect"
          }
        },
        "rules": {
          "react/react-in-jsx-scope": "off",
          "react/no-array-index-key": "off",
          "react/jsx-pascal-case": "off",
          "react/jsx-filename-extension": "off",
          "react/require-default-props": "off"
        }
      }
    ],
    "ignorePatterns": [
      "dist/"
    ]
  }
}
